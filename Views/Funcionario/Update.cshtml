@using Inter2.Models
@model Funcionario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<section class="col-md-12 mt-2">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 border-bottom">
        <h6><i class="fas fa-edit"></i>&nbsp;Editar Funcion√°rio</h6>
    </div>
    <form class="mt-3" asp-controller="Funcionario" asp-action="Update" method="POST">
        <div class="form-group">
            <label>Nome</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome"></span>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label>Cpf</label>
            <input asp-for="Cpf" class="form-control" />
            <span asp-validation-for="Cpf"></span>
        </div>
        <div class="form-group">
            <label>Anos de Experiencia</label>
            <input asp-for="AnosExperiencia" class="form-control" />
            <span asp-validation-for="AnosExperiencia"></span>
        </div>

        <button class="btn btn-sm btn-dark"><i class="fas fa-save"></i>&nbsp;Salvar</button>
    </form>
</section>