@using Inter2.Models
@model List<Funcionario>
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}
<style>
    .content-table 
{
    border-collapse: collapse;
    margin: 25px 0;
    font-size: 0.9em;
    border-radius: 15px 15px;
    overflow: hidden;
    box-shadow: 0 0 20px rgba(10, 0, 0, 0.25);
    
}

.content-table thead tr
{
    background-color: #363636;
    color: #ffffff;
    text-align: left;
    font-weight: bold;
    font-family: 'Arial';
}

.content-table th,
.content-table td
{
    padding: 12px 15px;      
}

.content-table tbody tr
{
    border-bottom: 1px solid #dddddd;
}

</style>

<section class="col-md-12 mt-2">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 border-bottom">
        <h6><i class="fas fa-users"></i>&nbsp;&nbsp;<span>Registrar Funcionário</span></h6>
    </div>
    <a class="btn btn-sm btn-success mt-4" href="/funcionario/create"><i class="fas fa-plus-circle"></i>&nbsp;Adicionar</a>
    <table class="table content-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>CPF</th>
                <th>Anos de experiência</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var funcionario in Model)
            {
                <tr>
                    <td>@funcionario.IdFuncionario</td>
                    <td>@funcionario.Nome</td>
                    <td>@funcionario.Email</td>
                    <td>@funcionario.Cpf</td>
                    <td>@funcionario.AnosExperiencia</td>
                    <td>
                        <a class="btn btn-sm btn-danger" href="/funcionario/delete/@funcionario.IdFuncionario"><i class="fas fa-trash-alt"></i>&nbsp;Apagar</a>
                        <a class="btn btn-sm btn-warning text-white" href="/funcionario/update/@funcionario.IdFuncionario"><i class="fas fa-edit"></i>&nbsp;Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>