@using Inter2.Models
@model List<Produto>
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<style>
    /*table.table thead th {
        border-top: 1px solid #dee2e6 !important;
        border-bottom: 1px solid #dee2e6 !important;
        font-weight: normal !important;
    }
    table{
        font-size: .875rem !important;
    }*/
    .content-table 
{
    border-collapse: collapse;
    margin: 25px 0;
    font-size: 0.9em;
    border-radius: 15px 15px;
    overflow: hidden;
    box-shadow: 0 0 20px rgba(10, 0, 0, 0.25);
    
}

.content-table thead tr
{
    background-color: #363636;
    color: #ffffff;
    text-align: left;
    font-weight: bold;
    font-family: 'Arial';
}

.content-table th,
.content-table td
{
    padding: 12px 15px;      
}

.content-table tbody tr
{
    border-bottom: 1px solid #dddddd;
}

</style>

<section class="col-md-12 mt-2">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 border-bottom">
        <h6><i class="fas fa-users"></i>&nbsp;&nbsp;<span>Registrar Produto</span></h6>
    </div>
    <a class="btn btn-sm btn-success mt-4" href="/produto/create"><i class="fas fa-plus-circle"></i>&nbsp;Adicionar</a>
    <table class="table content-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Descrição</th>
                <th>Disponíveis</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Nome</td>
                    <td>@p.Preco</td>
                    <td>@p.Descricao</td>
                    <td>@p.QuantidadeEstoque</td>
                    <td>
                        <a class="btn btn-sm btn-danger"  href="/produto/delete/@p.Id"><i class="fas fa-trash-alt"></i>&nbsp;Apagar</a>
                        <a class="btn btn-sm btn-warning text-white"  href="/produto/update/@p.Id"><i class="fas fa-edit"></i>&nbsp;Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>