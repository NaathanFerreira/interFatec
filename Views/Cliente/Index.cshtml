@using Inter2.Models
@model List<Cliente>
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}
    

<html>
    <head>
        <title>Lista de Cliente</title>
    </head>
 <style>

    .content-table 
    {
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 0.9em;
        min-width: 800px;
        border-radius: 15px 15px ;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(10, 0, 0, 0.25);
        
    }

    .content-table thead tr
    {
       background-color: #363636;
       color: #ffffff;
       text-align: left;
       font-weight: bold;
       font-family: 'Arial';
    }

    .content-table th,
    .content-table td
    {
        padding: 12px 15px;      
    }

    .content-table tbody tr
    {
        border-bottom: 1px solid #dddddd;
    }

  
</style>   
 <body>


         <table class="content-table">
        <thead>
            <tr>
                <th> Id </th>
                <th> Nome </th>
                <th> Email</th>
                <th> CPF </th>
                <th> Endere√ßo </th>
                <th>  </th>
                
            </tr>
        </thead>

            @foreach(var cliente in Model)
            {
                <tr>
                    <td>@cliente.Id</td>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Email</td>
                    <td>@cliente.Cpf</td>
                    <td>@cliente.Endereco</td>
                    <td>
                        <a class="btn btn-sm btn-danger"  href="/cliente/delete/@cliente.Id">Apagar</a>
                        <a class="btn btn-sm btn-warning"  href="/cliente/update/@cliente.Id">Editar</a>
                    </td>
                </tr>
            }
        </table>
        <a class="btn btn-sm btn-dark" href="/cliente/create">Adicionar</a>
 
 
 </body>
</html>